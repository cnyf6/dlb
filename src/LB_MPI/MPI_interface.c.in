#pragma pygen start
DLB_API_DEF(void, DLB_{MPI_NAME}_enter, dlb_{MPI_LCASE}_enter, ({C_PARAMS})) {{
    verbose(VB_MPI_API, ">> {MPI_NAME}...............");
    {BEFORE_FUNC};
}}

DLB_API_DEF(void, DLB_{MPI_NAME}_leave, dlb_{MPI_LCASE}_leave, (void)) {{
    verbose(VB_MPI_API, "<< {MPI_NAME}...............");
    {AFTER_FUNC};
}}

#pragma pygen end

void DLB_MPI_node_barrier (void) {
    if (is_mpi_ready()) {
        MPI_Comm mpi_comm_node = getNodeComm();
        MPI_Barrier(mpi_comm_node);
    }
}

#endif /* MPI_LIB */
