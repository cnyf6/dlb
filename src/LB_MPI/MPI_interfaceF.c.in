#ifndef MPI3_CONST
#  if MPI_VERSION >= 3
#    define MPI3_CONST const
#  else
#    define MPI3_CONST
#  endif
#endif

#pragma pygen start
void DLB_{MPI_NAME}_F_enter({F_PARAMS}) {{
    debug_inout(">> {MPI_NAME}...............\n");
    {BEFORE_FUNC};
}}

void DLB_{MPI_NAME}_F_leave(void) {{
    debug_inout("<< {MPI_NAME}...............\\n");
    {AFTER_FUNC};
}}

#pragma pygen end

void mpi_barrier_(MPI_Comm *, int *);

void dlb_mpi_node_barrier_ (void)  {
    if (is_mpi_ready()) {
        int ierror;
        MPI_Comm mpi_comm_node = getNodeComm();
        mpi_barrier_(&mpi_comm_node, &ierror);
    }
}


#endif /* MPI_LIB */
