#ifndef MPI_CALLS_CODED_H
#define MPI_CALLS_CODED_H

#define is_blocking(x) (x) & 0x10

enum type_mpi_call {
    _Unknown=0,
    _Send=1,
    _Receive=2,
    _Barrier=3,
    _Wait=4,
    _Bcast=5,
    _All2All=6,
    _Gather=7,
    _Scatter=8,
    _Scan=9,
    _Reduce=10,
    _SendRecv=11,
    _Test=12,
    _Comm=13,
    _IO=14,
//Last 16 bits: 0000000x yyyyyyyy
// x : Blocking - No blocking
// y : type mpi call [0-15]
    _Blocking=0x10
};

typedef enum {
    Unknown=0,
#pragma pygen start
    {MPI_KEYNAME} = {TAGS},
#pragma pygen end
    Not_implemented
} mpi_call;

extern const char* mpi_call_names[];

#endif //MPI_CALLS_CODED_H

